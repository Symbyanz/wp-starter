{
    "compilerOptions": {
        "outDir": "./assets/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "types": [
            "node"
        ]
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
        }
    }
}